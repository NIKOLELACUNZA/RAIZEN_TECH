    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dt class="col-sm-10">
      @Html.DisplayFor(model => model.Name)
    </dt>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Descripcion)
    </dt>
    <dt class="col-sm-10">
      @Html.DisplayFor(model => model.Descripcion)
