@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<form id="account" method="post">
    <img class="logotipo" src="~/img/icon.png">
    <p>Login to your account</p>
               
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <label>Your name</label><br>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control icon-name" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    
    <label>Password</label><br>
               
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control icon-password" autocomplete="current-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password" class="form-label">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
    </div>
    
    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-login-p">Sign in</button>
   
    <div class="log-options">
        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
    </div>
</form>


<div class="container">
  <div class="linea1"></div>
  <div class="Or">Or</div>
  <div class="linea2"></div>
</div><br><br>

<div class="container">
    <div class="row">
        <div class="col"> @*en lugar de col-md-4, lo ideal es asignar un tamaño al col (en este caso no tiene ninguno)*@
            <button class="iclog"><img src="~/img/logo-google.png" width="50px"></button>
        </div>
        <div class="col">
            <button class="iclog"><img src="~/img/logo-apple.png" width="30px"></button>
        </div>
        <div class="col">
            <button class="iclog"><img src="~/img/logo-fb.png" width="50px"></button>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
