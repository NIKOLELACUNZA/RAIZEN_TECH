@model PRUEBA.Models.PRODUCT

<style>
  .container-detalle {
    margin-top: 200px;
    height: 100vh;
  }
</style>

<div class="container-detalle">
  <h1>Detalles del Producto</h1>
  <br>
  <br>

  <dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.id</dd>

    <dt class="col-sm-2">Categoría</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>

    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Cantidad</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Imagen</dt>
    <dd class="col-sm-10">
      @if (!string.IsNullOrEmpty(Model.Image_URL))
      {
        <img src="@Model.Image_URL" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;" />
      }
      else
      {
        <p>No hay imagen disponible</p>
      }
    </dd>
  </dl>
  <div>
    <a href='@Url.Action("Catalogo", "Home")' class="btn btn-primary">Regresar a la lista de productos</a>
    <a asp-action="AddToCart" asp-route-id="@Model.id" class="btn btn-success">Add to cart</a>
  </div>
</div>